<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["Chinese", "Italian", "Japanese", "French", "Belgian"], include_blank: "Select a category" %>
  <%= f.submit "Add Restaurant", class: "btn btn-secondary" %>
<% end %>
